{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-return-await": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "prefer-template": "error",
    "semi": [
      "error",
      "never"
    ],
    "strict": "error"
  },
  "overrides": [
    {
      "files": [
        "src/assets/**/*.js"
      ],
      "env": {
        "browser": true,
        "node": false
      },
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
